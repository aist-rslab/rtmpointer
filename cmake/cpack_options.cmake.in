set(CPACK_PACKAGE_NAME "@PROJECT_NAME@")
set(CPACK_PACKAGE_VERSION_MAJOR "@RTMPOINTER_VERSION_MAJOR@")
set(CPACK_PACKAGE_VERSION_MINOR "@RTMPOINTER_VERSION_MINOR@")
set(CPACK_PACKAGE_VERSION_PATCH "@RTMPOINTER_VERSION_PATCH@")
set(CPACK_PACKAGE_DESCRIPTION_SUMMARY "@PKG_DESCRIPTION@")
